<h1>My tasks</h1>


<% @tasks.each do |task| %>
  <h3><%= link_to task.title, task_path(task.id) %></h3>
  <p><%= task.details %></p>
  <% if task.completed %>
    <p><i class="far fa-check-square"></i> Completed</p>
  <% else %>
    <p><i class="far fa-square"></i> Completed</p>
  <% end %>
  <div>
  <%= link_to 'delete', task_path(task.id), method: :delete %>
  </div>
<% end %>

<div>
  <%= link_to 'Create new task', new_task_path %>
</div>

<h1><%= @task.title %></h1>

<p><%= @task.details %></p>

<% if @task.completed %>
    <p><i class="far fa-check-square"></i> Completed</p>
  <% else %>
    <p><i class="far fa-square"></i> Completed</p>
<% end %>





<%= link_to 'Back to list', tasks_path %>
